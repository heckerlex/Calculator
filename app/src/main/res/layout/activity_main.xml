<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="360dp"
        android:layout_height="503dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintVertical_bias="0.93">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clear"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#730907"
                android:clickable="true"
                android:focusable="true"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="clear"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/clear"
                android:textAlignment="center"
                android:textColor="#FFFFFF"

                android:textSize="25sp"
                android:textStyle="bold"
                app:cornerRadius="50sp"
                app:strokeColor="#FB2F2F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/backspace"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="backspace"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/backspace"
                app:cornerRadius="50dp"
                app:icon="@drawable/backspace_grey_192x192"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                app:iconTintMode="multiply"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/squareroot"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="sqrt"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/squareroot"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/parenthesis"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="parenthesis"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/parenthesis"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/exponent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="exponent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/exponent"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/divide"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="divide"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/divide"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="seven"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/seven"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/eight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="eight"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/eight"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/nine"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="nine"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/nine"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/multiply"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="multiply"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/multiply"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="four"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/four"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/five"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="five"
                android:text="@string/five"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:iconTint="#000000"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/six"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="six"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/six"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/add"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="add"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/add"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/one"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="one"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/one"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/two"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="two"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/two"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/three"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="three"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/three"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/subtract"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="subtract"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/subtract"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/plusMinus"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="plus_minus"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/plusMinus"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/zero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="zero"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/zero"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/point"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1E1E1E"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="dot"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/point"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/equals"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#073709"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="equal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/equals"
                android:textSize="25sp"
                app:cornerRadius="50sp"
                app:strokeColor="#466631"
                app:strokeWidth="2dp" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/text"
        android:layout_width="353dp"
        android:layout_height="100dp"
        android:autofillHints="false"
        android:background="@drawable/border"
        android:cursorVisible="true"
        android:fontFamily="monospace"
        android:hapticFeedbackEnabled="true"
        android:includeFontPadding="true"
        android:inputType="none"
        android:outlineProvider="none"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:text=""
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>